<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollBar">
        <attr name="scroll_type" format="enum">
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>
        <attr name="thumb_color" format="color|reference" />
        <attr name="track_color" format="color|reference" />
        <attr name="thumb_width" format="dimension" />
    </declare-styleable>
</resources>
